<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_200"
    android:orientation="vertical"
    android:background="@color/color_orange_2">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/menu_user_head_clv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_15"
        android:src="@drawable/app_logo"
        app:civ_border_color="@color/color_white"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_toRightOf="@id/menu_user_head_clv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:maxLines="1"
            android:text="ffffffffffffffffffff"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_18sp" />

        <TextView
            android:padding="@dimen/size_5"
            android:id="@+id/menu_user_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_15"
            android:layout_marginTop="@dimen/size_15"
            android:ellipsize="end"
            android:lineSpacingExtra="9dp"
            android:maxLines="2"
            android:text="fffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
            android:textColor="@color/color_white" />
    </LinearLayout>


</RelativeLayout>