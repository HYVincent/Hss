<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="@color/color_blue">

        <RelativeLayout
            android:id="@+id/rl_common_return"
            android:layout_width="@dimen/size_50"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_centerInParent="true"
                android:src="@drawable/common_arrow_left" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_home_location"
            android:layout_width="@dimen/size_50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:textColor="@color/color_white"
                android:text="设置"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_15sp"
                android:id="@+id/tv_setting_home_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <EditText
            android:paddingLeft="@dimen/size_10"
            android:textSize="@dimen/text_size_15sp"
            android:hint="输入地名搜索.."
            android:id="@+id/connection_input_location"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_icon_background_search"
            android:layout_toRightOf="@id/rl_common_return"
            android:layout_toLeftOf="@id/rl_setting_home_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.amap.api.maps.MapView
            android:id="@+id/mapView"
            android:padding="@dimen/size_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_margin="@dimen/size_15"
            android:elevation="@dimen/size_5"
            android:layout_gravity="right"
            android:id="@+id/fab_start"
            android:src="@drawable/common_icon_navigation"
            app:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>