<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/size_5"
    android:elevation="@dimen/size_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--cardCornerRadius 指定卡片圆角-->
    <!--elevation 指定卡片高度-->

    <LinearLayout
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentRight="true"
                android:text="555555555"
                android:id="@+id/item_feeback_time"
                android:layout_gravity="right"
                android:padding="@dimen/size_5"
                android:textColor="@color/color_gray_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:text="titlefffffffffffff"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toLeftOf="@id/item_feeback_time"
                android:id="@+id/item_feedback_title"
                android:textColor="@color/color_blue"
                android:layout_marginRight="@dimen/size_5"
                android:textSize="@dimen/text_size_15sp"
                android:padding="@dimen/size_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>



        <TextView
            android:id="@+id/item_feedback_content"
            android:layout_marginTop="@dimen/size_5"
            android:textColor="@color/color_gray_1"
            android:textSize="@dimen/text_size_12sp"
            android:padding="@dimen/size_5"
            android:text="...fffffffffffffffffffffff555555555555555555555555555555555555555555555555555555555555555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>