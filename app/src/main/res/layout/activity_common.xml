<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_layout_title"/>

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/common_ll_shared"
            android:background="@color/color_white"
            android:layout_marginTop="@dimen/size_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/common_icon_shared"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30" />

            <TextView
                android:layout_marginLeft="@dimen/size_15"
                android:text="分享APP到QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <include layout="@layout/common_layout_line"/>

        <RelativeLayout
            android:id="@+id/common_ll_version"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50">

            <ImageView
                android:id="@+id/lv_2"
                android:layout_centerVertical="true"
                android:src="@drawable/common_icon_version_num"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30" />

            <TextView
                android:layout_marginLeft="@dimen/size_15"
                android:text="当前版本号"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/lv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="@dimen/size_15"
                android:layout_centerVertical="true"
                android:id="@+id/common_tv_current"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <include layout="@layout/common_layout_line"/>

        <RelativeLayout
            android:id="@+id/common_ll_check_update"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50">

            <ImageView
                android:id="@+id/lv_3"
                android:layout_centerVertical="true"
                android:src="@drawable/common_icon_check_update"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30" />

            <TextView
                android:layout_marginLeft="@dimen/size_15"
                android:text="检查新版本"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/lv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <include layout="@layout/common_layout_line"/>

        <RelativeLayout
            android:id="@+id/common_ll_about_us"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50">

            <ImageView
                android:id="@+id/lv_4"
                android:layout_centerVertical="true"
                android:src="@drawable/common_icon_about_us"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30" />

            <TextView
                android:layout_marginLeft="@dimen/size_15"
                android:text="关于我们"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/lv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <include layout="@layout/common_layout_line"/>

        <LinearLayout
            android:id="@+id/common_ll_logout"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/common_icon_logout"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30" />

            <TextView
                android:layout_marginLeft="@dimen/size_15"
                android:text="注销当前账号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_ll_test_push"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/common_icon_test"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30" />

            <TextView
                android:layout_marginLeft="@dimen/size_15"
                android:text="测试消息推送"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>