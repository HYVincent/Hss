<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_layout_title"/>

        <include layout="@layout/common_user_info"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/color_blue"
                android:layout_marginLeft="@dimen/size_15"
                android:text="留言"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginTop="@dimen/size_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>



    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50">

        <View
            android:id="@+id/view"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"/>

        <TextView
            android:text="忽略"
            android:gravity="center"
            android:id="@+id/tv_repulse"
            android:textColor="@color/color_white"
            android:background="@drawable/common_shape_background_gray_circle"
            android:textSize="@dimen/text_size_15sp"
            android:layout_toLeftOf="@id/view"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40" />

        <TextView
            android:text="同意添加"
            android:gravity="center"
            android:id="@+id/tv_agreement"
            android:textColor="@color/color_white"
            android:background="@drawable/common_shape_background_blue_circle"
            android:textSize="@dimen/text_size_15sp"
            android:layout_toRightOf="@id/view"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginRight="@dimen/size_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40" />

    </RelativeLayout>

</RelativeLayout>