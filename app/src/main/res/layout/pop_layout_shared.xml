<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:paddingTop="@dimen/size_15"
            android:text="分享"
            android:layout_marginLeft="@dimen/size_15"
            android:id="@+id/tv_cancel"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_size_18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginBottom="@dimen/size_15"
            android:background="@color/color_white"
            android:layout_marginTop="@dimen/size_20"
            android:id="@+id/ll_shared_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_qq_friend"
                android:layout_width="@dimen/size_0"
                android:layout_weight="1"
                android:layout_height="@dimen/size_80">

                <ImageView
                    android:id="@+id/iv_5"
                    android:src="@drawable/common_icon_qq_friends"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50" />

                <TextView
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_below="@id/iv_5"
                    android:text="QQ好友"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qqzone"
                android:layout_width="@dimen/size_0"
                android:layout_weight="1"
                android:layout_height="@dimen/size_80">

                <ImageView
                    android:id="@+id/iv_6"
                    android:src="@drawable/common_icon_qzone"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50" />

                <TextView
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_below="@id/iv_6"
                    android:text="QQ空间"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/size_0"
                android:layout_weight="2"
                android:layout_height="@dimen/size_80"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>