<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_layout_title_1"/>

    <LinearLayout
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/size_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/password_iv_old_password"
            android:layout_marginLeft="@dimen/size_15"
            android:src="@drawable/common_icon_old_password"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30" />


        <EditText
            android:id="@+id/password_et_old_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:layout_marginLeft="@dimen/size_15"
            android:background="@null"
            android:textColorHint="@color/color_gray_1"
            android:textSize="@dimen/size_15"
            android:hint="请输入当前登录密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <include layout="@layout/common_layout_line"/>

    <LinearLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/password_iv_new_password"
            android:layout_marginLeft="@dimen/size_15"
            android:src="@drawable/common_icon_new_password"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30" />


        <EditText
            android:id="@+id/password_et_new_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:layout_marginLeft="@dimen/size_15"
            android:background="@null"
            android:textColorHint="@color/color_gray_1"
            android:textSize="@dimen/size_15"
            android:hint="请输入新密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/password_iv_new_password_ok"
            android:layout_marginLeft="@dimen/size_15"
            android:src="@drawable/common_icon_new_password_ok"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30" />


        <EditText
            android:id="@+id/password_et_new_password_ok"
            android:inputType="textPassword"
            android:maxLength="16"
            android:layout_marginLeft="@dimen/size_15"
            android:background="@null"
            android:textColorHint="@color/color_gray_1"
            android:textSize="@dimen/size_15"
            android:hint="请确认新密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>