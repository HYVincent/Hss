<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car_rotate_speed"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_common_circle"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:text="转速\n2500"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car_speed"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_common_circle"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:text="车速\n40km/h"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car_fuel_consumption"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_common_circle"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:text="油耗\n6升/100公里"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car_air_temperature"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_common_circle"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:text="大气温度\n20℃"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car_into_air_consumption"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_common_circle"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:text="进气温度\n35℃"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/car_coolant_temperature"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_common_circle"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:text="冷却液温度\n100℃"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>