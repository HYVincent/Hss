<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray">

    <include layout="@layout/common_layout_title_1"/>

    <LinearLayout
        android:layout_marginTop="@dimen/size_15"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="@dimen/size_15"
            android:id="@+id/setting_clv_head"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_92"
            android:layout_height="@dimen/size_92"
            android:src="@drawable/car_icon_engine"
            app:civ_border_overlay="true"
            app:civ_border_color="@color/color_white"
            app:civ_border_width="3dp" />

        <LinearLayout
            android:id="@+id/setting_ll_user_info"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="fffff"
                android:textSize="@dimen/text_size_18sp"
                android:maxLength="12"
                android:id="@+id/setting_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_size_18sp"
                android:text="手机号码"
                android:layout_marginTop="@dimen/size_10"
                android:id="@+id/setting_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_ll_msg"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/size_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/setting_icon_msg"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30" />

        <TextView
            android:text="消息"
            android:padding="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_15"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_ll_device_manager"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/size_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/setting_icon_device_manager"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30" />

        <TextView
            android:text="设备管理"
            android:padding="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_15"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <include layout="@layout/common_layout_line"/>

    <LinearLayout
        android:id="@+id/setting_ll_change_password"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/setting_icon_change_password"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30" />

        <TextView
            android:text="修改登录密码"
            android:padding="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_15"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <include layout="@layout/common_layout_line"/>
    <LinearLayout
        android:id="@+id/setting_ll_common"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/setting_icon_common"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30" />

        <TextView
            android:text="通用"
            android:padding="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_15"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <include layout="@layout/common_layout_line"/>
    <LinearLayout
        android:id="@+id/setting_ll_feedback"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/setting_icon_edittext"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30" />

        <TextView
            android:text="意见反馈"
            android:padding="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_15"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>



</LinearLayout>