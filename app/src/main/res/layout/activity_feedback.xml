<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_gray_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_layout_title_1"/>

    <LinearLayout
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/size_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:gravity="center_vertical">

        <TextView
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/size_15"
            android:text="标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/feedback_et_title"
            android:background="@null"
            android:hint="反馈主题"
            android:layout_marginRight="@dimen/size_15"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:padding="@dimen/size_10"
        android:layout_height="@dimen/size_180">

        <EditText
            android:id="@+id/feedback_et_content"
            android:hint="写点内容吧"
            android:layout_marginTop="@dimen/size_10"
            android:background="@null"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <Button
        android:id="@+id/feedback_btn_submit"
        android:layout_marginTop="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:layout_marginLeft="@dimen/size_15"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/color_white"
        android:text="提交"
        android:background="@drawable/login_shape_background_reseda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>